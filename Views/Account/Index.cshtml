@model IEnumerable<MultiLanguage.Models.AccountModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="@Url.Content("~/Content/StyleSheet.css")" rel="stylesheet" type="text/css"/>
}

<h2>Index</h2>
<p>
    @Html.ActionLink(MultiLanguage.Res.Resource.Create, "Create")   
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink(MultiLanguage.Res.Resource.Modify, "Modify", new { id = item.Id }) |
                @Html.ActionLink(MultiLanguage.Res.Resource.Delete, "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
